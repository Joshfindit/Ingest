<p id="notice"><%= notice %></p>

<div class="ui very padded container ">
  <h1>Hours</h1>

  <table class="ui very basic celled table">
    <thead>
      <tr>
                  <th>Name</th>
                  <th>Normalized name</th>
                  <th>Hour</th>
                  <th>Datetimesemanticzoomout</th>
                  <th>Datetimesemanticzoomin</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hours.limit(45).each do |hour| %>
        <tr>
                                    <td><%= hour.name %></td>
                                                <td><%= hour.normalized_name %></td>
                                                <td><%= hour.hour %></td>
                                                <% @hour.datetimeSemanticZoomOut.each do |datetimeSemanticZoomOut| -%>
                <%= link_to datetimeSemanticZoomOut.name, datetimeSemanticZoomOut %>
              <% end -%>
                                                <% @hour.datetimeSemanticZoomIn.each do |datetimeSemanticZoomIn| -%>
                <%= link_to datetimeSemanticZoomIn.name, datetimeSemanticZoomIn %>
              <% end -%>
                                <td><%= link_to 'Show', hour %></td>
          <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
          <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Hour', new_hour_path %>
</div>
