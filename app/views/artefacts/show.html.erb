<p id="notice"><%= notice %></p>

<div class="ui">
  <a class="ui labeled icon button" href="<%= artefacts_path %>">
    <i class="up arrow icon"></i>
    List Artefacts
  </a>
  <a class="ui basic icon button" href="<%= edit_artefact_path(@artefact) %>">
    <i class="edit icon"></i>
    Edit
  </a>
</div>

<div class="ui hidden divider"></div>

<div class="ui vertical masthead center aligned segment">
  <h1 class="ui header">Artefact</h1>
</div>

<div class="ui text container">

  <p>
    <strong>Name:</strong>
    <%= @artefact.name -%>
  </p>

  <p>
    <strong>Abstract:</strong>
    <%= @artefact.abstract -%>
  </p>

  <p>
    <strong>Content:</strong>
    <%= markdown(@artefact.content) if @artefact.content -%>
  </p>

  <p>
    <strong>External uuid:</strong>
    <%= @artefact.external_uuid -%>
  </p>

  <p>
    <strong>External source:</strong>
    <%= @artefact.external_source -%>
  </p>

  <p>
    <strong>Creator:</strong>
    <% if !@artefact.creator.nil? -%>
      <% @artefact.creator.each do |creator| -%>
        <%= link_to creator.name, creator %>
      <% end -%>
    <% end -%>
  </p>

  <p>
    <strong>Tags:</strong>
    <% if !@artefact.tags.nil? -%>
      <% @artefact.tags.each do |tags| -%>
        <%= link_to tags.name, tags %>
      <% end -%>
    <% end -%>
  </p>

  <p>
    <strong>Snippets:</strong>
    <% if !@artefact.snippets.nil? -%>
      <% @artefact.snippets.each do |snippets| -%>
        <%= link_to snippets.name, snippets %>
      <% end -%>
    <% end -%>
  </p>

  <p>
    <strong>Devicerecordedat:</strong>
    <%# if !@artefact.deviceRecordedAt.nil? -%>
      <%# @artefact.deviceRecordedAt.each do |deviceRecordedAt| -%>
        <%#= link_to deviceRecordedAt.name, deviceRecordedAt %>
      <%# end -%>
    <%# end -%>
  </p>

  <p>
    <strong>Ingestedat:</strong>
    <% if !@artefact.ingestedAt.nil? -%>
      <% @artefact.ingestedAt.each do |ingestedAt| -%>
        <%= link_to ingestedAt.name, ingestedAt %>
      <% end -%>
    <% end -%>
  </p>

  <p>
    <strong>Referencesabsolutedatetimes:</strong>
    <% if !@artefact.referencesAbsoluteDatetimes.nil? -%>
      <% @artefact.referencesAbsoluteDatetimes.each do |referencesAbsoluteDatetimes| -%>
