<p id="notice"><%= notice %></p>

<div class="ui very padded container ">
  <h1>Artefacts</h1>

  <table class="ui very basic celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Abstract</th>
        <th>Content</th>
        <th>External uuid</th>
        <th>External source</th>
        <th>Creator</th>
        <th>Tags</th>
        <th>Snippets</th>
        <th>Devicerecordedat</th>
        <th>Absolutedatetimeoccurredat</th>
        <th>Absolutedatetimerecordedat</th>
        <th>Ingestedat</th>
        <th>Referencesabsolutedatetimes</th>
        <th>Refersto</th>
        <th>Isreferredtoby</th>
        <th>Absolutedatetimeoccurredat</th>
        <th>Absolutedatetimerecordedat</th>
        <th>Geospatialocurrededat</th>
        <th>Geospatialrecordedat</th>
        <th>Editedat</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @artefacts.limit(45).each do |artefact| %>
        <tr>


          <td>
              <%= link_to artefact.name, artefact %>
          </td>

          <td>
            <%- if !artefact.abstract.nil? %>
              <%= artefact.abstract %>
            <%- end %>
          </td>

          <td>
            <%- if !artefact.content.nil? %>
              <%= truncate(artefact.content, :length => 30, :separator => ' ') %>
            <%- end %>
          </td>

          <td>
            <%- if !artefact.external_uuid.nil? %>
              <%= artefact.external_uuid %>
            <%- end %>
          </td>

          <td>
            <%- if !artefact.external_source.nil? %>
              <%= artefact.external_source %>
            <%- end %>
          </td>

          <td>
            <%- if !artefact.creator.empty? %>
              <%- artefact.creator.each do |creator| -%>
                <%= link_to creator.name, creator %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.tags.empty? %>
              <%- artefact.tags.each do |tags| -%>
                <%= link_to tags.name, tags %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.snippets.empty? %>
              <%- artefact.snippets.each do |snippets| -%>
                <%= link_to snippets.name, snippets %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%#- if !artefact.deviceRecordedAt.empty? %>
              <%#- artefact.deviceRecordedAt.each do |deviceRecordedAt| -%>
                <%#= link_to deviceRecordedAt.name, deviceRecordedAt %>
              <%#- end -%>
            <%#- end -%>
          </td>

          <td>
            <%- if !artefact.absoluteDatetimeOccurredAt.empty? %>
              <%- artefact.absoluteDatetimeOccurredAt.each do |absoluteDatetimeOccurredAt| -%>
                <%= link_to absoluteDatetimeOccurredAt.name, absoluteDatetimeOccurredAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.absoluteDatetimeRecordedAt.empty? %>
              <%- artefact.absoluteDatetimeRecordedAt.each do |absoluteDatetimeRecordedAt| -%>
                <%= link_to absoluteDatetimeRecordedAt.name, absoluteDatetimeRecordedAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.ingestedAt.empty? %>
              <%- artefact.ingestedAt.each do |ingestedAt| -%>
                <%= link_to ingestedAt.name, ingestedAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.referencesAbsoluteDatetimes.empty? %>
              <%- artefact.referencesAbsoluteDatetimes.each do |referencesAbsoluteDatetimes| -%>
                <%= link_to referencesAbsoluteDatetimes.name, referencesAbsoluteDatetimes %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.refersTo.empty? %>
              <%- artefact.refersTo.each do |refersTo| -%>
                <%= link_to refersTo.name, refersTo %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.isReferredToBy.empty? %>
              <%- artefact.isReferredToBy.each do |isReferredToBy| -%>
                <%= link_to isReferredToBy.name, isReferredToBy %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.absoluteDatetimeOccurredAt.empty? %>
              <%- artefact.absoluteDatetimeOccurredAt.each do |absoluteDatetimeOccurredAt| -%>
                <%= link_to absoluteDatetimeOccurredAt.name, absoluteDatetimeOccurredAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.absoluteDatetimeRecordedAt.empty? %>
              <%- artefact.absoluteDatetimeRecordedAt.each do |absoluteDatetimeRecordedAt| -%>
                <%= link_to absoluteDatetimeRecordedAt.name, absoluteDatetimeRecordedAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.geospatialOccurrededAt.empty? %>
              <%- artefact.geospatialOccurrededAt.each do |geospatialOccurrededAt| -%>
                <%= link_to geospatialOccurrededAt.name, geospatialOccurrededAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.geospatialRecordedAt.empty? %>
              <%- artefact.geospatialRecordedAt.each do |geospatialRecordedAt| -%>
                <%= link_to geospatialRecordedAt.name, geospatialRecordedAt %>
              <%- end -%>
            <%- end -%>
          </td>

          <td>
            <%- if !artefact.editedAt.empty? %>
              <%- artefact.editedAt.each do |editedAt| -%>
                <%= link_to editedAt.name, editedAt %>
              <%- end -%>
            <%- end -%>
          </td>
          <td><%= link_to 'Edit', edit_artefact_path(artefact) %></td>
          <td><%= link_to 'Destroy', artefact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Artefact', new_artefact_path %>
</div>
