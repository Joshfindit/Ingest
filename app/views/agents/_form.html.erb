<div class="ui text container">
  <div class="ui form">
    <%= form_for(@agent) do |f| %>
      <% if @agent.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h2>
          <ul>
            <% @agent.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name %>
            </div>
          
  

            <div class="field">
              <%= f.label :description %><br>
              <%= f.text_area :description %>
            </div>
          
  

            <div class="field">
              <%= f.label :alias %><br>
              <%= f.text_field :alias %>
            </div>
          
  

            <div class="field">
              <%= f.label :details %><br>
              <%= f.text_area :details %>
            </div>
          
  

         
            <div class="field">
              <%= f.label :artefacts_id %><br>
              
              # Edit the Class.all.sort to the Class name of the connected node (such as `GeospatialNode.all.sort`)
              <%= f.collection_select(:artefacts, Class.all.sort { |a,b| a.name <=> b.name }, :id, :name, options = {:prompt => "Please Select an Item", :selected => @agent.artefacts.map(&:id)}, html_options = {:multiple => true, :class=>"search"}) %>
            </div>

  

      <div class="actions">
        <%= f.submit html_options = {:class=>"ui button"} %>
      </div>
    <% end %>
  </div>
</div>

<script>
$('.search')
  .dropdown()
;
</script>
