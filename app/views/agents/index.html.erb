<p id="notice"><%= notice %></p>

<div class="ui very padded container ">
  <h1>Agents</h1>

  <table class="ui very basic celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Alias</th>
        <th>Details</th>
        <th>Artefacts</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @agents.limit(45).each do |agent| %>
        <tr>


          <td>
              <%= link_to agent.name, agent %>
          </td>

          <td>
            <%- if !agent.description.nil? %>
              <%= truncate(agent.description, :length => 30, :separator => ' ') %>
            <%- end %>
          </td>

          <td>
            <%- if !agent.alias.nil? %>
              <%= agent.alias %>
            <%- end %>
          </td>

          <td>
            <%- if !agent.details.nil? %>
              <%= agent.details %>
            <%- end %>
          </td>

          <td>
            <%- if !agent.artefacts.empty? %>
              <%- agent.artefacts.each do |artefacts| -%>
                <%= link_to artefacts.name, artefacts %>
              <%- end -%>
            <%- end -%>
          </td>
          <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
          <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Agent', new_agent_path %>
</div>
